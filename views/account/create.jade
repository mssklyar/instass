extends ../layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Создание аккаунта
                    div.signup-wall
                        form(class='form-signin', action='/account', method='POST')
                            input(type='text', name='login', class='form-control nomargin', placeholder='Логин', required)
                            input(type='password', name='password', class='form-control', placeholder='Пароль',required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Создать
                            span.clearfix
                    #message
                        if message
                            h1.text-center.error-message #{message}